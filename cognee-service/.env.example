# Environment Configuration
# Copy to .env and fill in values

# Cognee Settings
COGNEE_GRAPH_DB=neo4j  # or networkx for local
COGNEE_VECTOR_DB=qdrant  # or chromadb for local
COGNEE_LLM_PROVIDER=openai

# OpenAI (for embeddings and LLM)
OPENAI_API_KEY=your_openai_key_here

# Neo4j (optional - for production graph storage)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password

# Qdrant (optional - for production vector storage)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Server Settings
HOST=0.0.0.0
PORT=8001
DEBUG=true
