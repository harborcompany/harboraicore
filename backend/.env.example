# ============================================
# HARBOR BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (Required)
# ============================================
DATABASE_URL="postgresql://harbor:harbor_dev_password@localhost:5432/harbor"

# ============================================
# SERVER CONFIG
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# JWT Authentication
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# ============================================
# GOOGLE CLOUD STORAGE (Required for file storage)
# ============================================
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=harbor-media-assets
GCS_BUCKET_DATASETS=harbor-datasets
GCS_BUCKET_EXPORTS=harbor-exports

# Path to your GCP service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================
# AI SERVICES
# ============================================
# OpenAI (for embeddings and RAG)
OPENAI_API_KEY=sk-your-key-here

# Google AI / Gemini (alternative)
GOOGLE_AI_API_KEY=

# ============================================
# OPTIONAL SERVICES
# ============================================

# Redis
REDIS_URL=redis://localhost:6379

# Neo4j (Graph RAG)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=harbor_graph_password

# Stripe (Payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Resend)
RESEND_API_KEY=

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:8080
